{
    "env": {
        "browser": true,
        "es2020": true,
        "node": true,
        "es6": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "@typescript-eslint"
    ],
    "rules": {
        "no-unused-vars": "off",
        "import/extensions": 0,
        "@typescript-eslint/no-unused-vars": ["error"],
        "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
        "react/jsx-filename-extension": [1, { "extensions": [".tsx", ".jsx"] }]
    },
    "settings": {
        "import/resolver": {
            "node": {
                "extensions": [".js", ".jsx", ".ts", ".tsx"]
            }
        }
    }
}
